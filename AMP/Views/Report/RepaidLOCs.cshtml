            var LOC_SigningDate_From = $('#LOC_SigningDate_From').val();
            var LOC_SigningDate_To = $('#LOC_SigningDate_To').val();
                //alert("abc" + filter);
                //$.session.set('filter', filter);

            if (LOC_Region == null)
