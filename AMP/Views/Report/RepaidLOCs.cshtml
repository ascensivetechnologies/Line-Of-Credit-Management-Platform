                //alert("abc" + filter);
                //$.session.set('filter', filter);

            if (LOC_Region == null)
                LOC_Region = "";
            if (LOC_Country == null)
                LOC_Country = "";
            if (LOC_AllocatedAmount == null)
                LOC_AllocatedAmount = "";
            if (LOC_DeaDate_From == null)
                LOC_DeaDate_From = "";
            if (LOC_DeaDate_To == null)
